@model JobsForJoe.UI.MVC.Models.ContactViewModel
@{
    ViewBag.Title = "Contact Us";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="row" id="contact">
                        <div class="col-md-12">
                            <div class="contact-form">
                                <div class="status alert alert-success" style="display: none"></div>
                                    <div class="card-header card-header-primary">
                                        <h2 class="title text-center">Get In Touch</h2>
                                    </div>
                                <div class="card-body">
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()
                                        <div class="form-group col-md-6">
                                            @Html.TextBoxFor(x => x.Name, new { placeholder = "Name", @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-6">
                                            @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-8">
                                            @Html.TextBoxFor(x => x.Subject, new { placeholder = "Subject", @class = "form-control" })
                                        </div>
                                        <div class="form-group col-md-8">
                                            @Html.TextAreaFor(x => x.Message, new { placeholder = "Your Message Here", @class = "form-control", id = "message", rows = "8", title = "Please include all relevant information" })
                                        </div>

                                        <input align="middle" type="submit" name="submit" class="btn btn-primary" value="Submit" />
                                    }
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header card-header-primary">
                <h2 class="title text-center">Visit us at our local headquarters</h2>
            </div>
            <div class="card-body">
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3096.5688232609054!2d-94.58381198449254!3d39.09351804296462!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87c0f0684bd523b3%3A0xe4edc415ec0b1383!2sMessenger+Coffee+Co.+%2B+Ibis+Bakery!5e0!3m2!1sen!2sus!4v1553707791640" width="100%" height="100%" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
