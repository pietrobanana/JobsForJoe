@model JobsForJoe.Data.EF.Location
@using Microsoft.AspNet.Identity
@using JobsForJoe.Data.EF

@{
    ViewBag.Title = "Details";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h2 class="card-title">Details</h2>
                        <p class="card-category"></p>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">

                                <div>
                                    <h4>Location</h4>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.StoreName)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.StoreName)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.StoreNumber)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.StoreNumber)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.City)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.City)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.State)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.State)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.ManagerID)
                                        </dt>

                                        <dd>
                                            @*@Html.DisplayFor(model => model.ManagerID)*@
                                            @foreach (UserDetail user in ViewBag.UserDetails)
                                            {
                                                if (Model.ManagerID == user.UserID)
                                                {

                                                    @user.FirstName @user.LastName
                                                }
                                            }
                                        </dd>

                                        @*<dt>
                                            @Html.DisplayNameFor(model => model.StoreImage)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.StoreImage)
                                        </dd>*@

                                    </dl>
                                </div>
                                <p>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = Model.LocationID }) @:|
    }

                                    @Html.ActionLink("Back to List", "Index")
                                </p>

                                <thead class="text-primary">
                                    <dl class="dl-horizontal"></dl>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


