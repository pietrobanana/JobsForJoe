@using Microsoft.AspNet.Identity
@{ 
    string currentUserId = User.Identity.GetUserId();
}

<!DOCTYPE html>
<html>

<head>
    <title>Jobs for Joe</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/Content/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/Content/assets/img/favicon.png">
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- CSS Files -->
    <!-- Material Kit CSS -->
    <link href="~/Content/assets/css/material-dashboard.css" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/Content/assets/demo/demo.css" rel="stylesheet" />
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</head>


<body class="dark-edition">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="black" data-image="~/Content/assets/img/sidebar-4.jpg">
            <div class="logo">
                <a href="@Url.Action("Index","Home")" class="simple-text logo-normal">
                    Jobs for Joe 
                </a>
            </div>

            @***********************************
                SIDE NAV BAR //Main Navigation
                *********************************@

            <div class="sidebar-wrapper">

                <ul class="nav">
                    <li class="nav-item active  ">
                        <a class="nav-link" href="@Url.Action("Index","Home")">
                            <i class="material-icons">dashboard</i>
                            <p>Dashboard</p>
                        </a>
                    </li>

                    @if (Request.IsAuthenticated)
                    {
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Details","UserDetails", new { id = currentUserId})">
                            <i class="material-icons">person</i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    }

                    @if (Request.IsAuthenticated)
                    {
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index","Applications")">
                            <i class="material-icons">content_paste</i>
                            <p>Applications</p>
                        </a>
                    </li>
                    }
                    
                    @if (Request.IsAuthenticated)
                    {
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index","OpenPositions")">
                            <i class="material-icons">library_books</i>
                            <p>Open Positions</p>
                        </a>
                    </li>
                    }


                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index","Positions")">
                            <i class="material-icons">bubble_chart</i>
                            <p>Positions</p>
                        </a>
                    </li>
                    }

                    @if (Request.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("Store Manager"))
                    {
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Index","Locations")">
                            <i class="material-icons">location_ons</i>
                            <p>Locations</p>
                        </a>
                    </li>
                    }

                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("Contact","Home")">
                            <i class="material-icons">notifications</i>
                            <p>Contact</p>
                        </a>
                    </li>

                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("About","Home")">
                            <i class="material-icons">notifications</i>
                            <p>About</p>
                        </a>
                    </li>

                    <!-- your sidebar here -->
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    @*<div class="navbar-wrapper">
                        <a class="navbar-brand" href="javascript:void(0)">@ViewBag.Title</a>
                    </div>*@
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-item" href="@Url.Action("Index","RolesAdmin")">
                                        Roles Admin
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-item" href="@Url.Action("Index","UsersAdmin")">
                                        Users Admin
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                @Html.Partial("_LoginPartial")
                            </li>
                            @******************Nav Bar (makes a white button//DO NOT USE!)******************@
                           @* <div class="navbar navbar-inverse navbar-fixed-top">
                                <div class="container">
                                    <div class="navbar-header">
                                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                            <span class="icon-bar"></span>
                                        </button>
                                    </div>
                                    <div class="navbar-collapse collapse">
                                        <ul class="nav navbar-nav">

                                            @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                                            {
                                                <li>@Html.ActionLink("RolesAdmin", "Index", "RolesAdmin")</li>
                                                <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin")</li>
                                            }
                                        </ul>
                                        @Html.Partial("_LoginPartial")
                                    </div>
                                </div>
                            </div>*@
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            @********Content**********@
            <div class="content">
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, Jobs For Joe
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <!--   Core JS Files   -->
    <script src="~/Content/assets/js/core/jquery.min.js"></script>
    <script src="~/Content/assets/js/core/popper.min.js"></script>
    <script src="~/Content/assets/js/core/bootstrap-material-design.min.js"></script>
    <script src="https://unpkg.com/default-passive-events"></script>
    <script src="~/Content/assets/js/plugins/perfect-scrollbar.jquery.min.js"></script>
    <!--  Google Maps Plugin    -->
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
    <!-- Chartist JS -->
    <script src="~/Content/assets/js/plugins/chartist.min.js"></script>
    <!--  Notifications Plugin    -->
    <script src="~/Content/assets/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Material Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/Content/assets/js/material-dashboard.js?v=2.1.0"></script>
    <script src="~/Content/assets/demo/demo.js"></script>



    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
