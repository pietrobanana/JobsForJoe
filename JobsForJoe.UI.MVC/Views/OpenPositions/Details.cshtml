@model JobsForJoe.Data.EF.OpenPosition

@{
    ViewBag.Title = "Details";
}



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h2 class="card-title">Details</h2>
                        <p class="card-category"></p>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                
                                <div>
                                    <h4>OpenPosition</h4>
                                    <hr />
                                    <dl class="dl-horizontal">
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Location.StoreName)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Location.StoreName)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Position.Title)
                                        </dt>

                                        <dd>
                                            @Html.DisplayFor(model => model.Position.Title)
                                        </dd>

                                    </dl>
                                </div>
                                <p>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = Model.OpenPositionID })
                                    }

                                    @Html.ActionLink("Back to List", "Index")
                                </p>


                                <thead class="text-primary">
                                    <dl class="dl-horizontal"></dl>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


